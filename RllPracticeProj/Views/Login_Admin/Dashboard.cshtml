@model RllPracticeProj.Models.Login_Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vaccine Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Online Vaccine Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    @Html.ActionLink("User Dashboard", "Dashboard", "Login_Users", null, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Manage Centers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Login_Admin")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>@ViewBag.Title</h2>

        <div class="row">
            <div class="col-lg-6">
                <h3>Recent Vaccine Registrations</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Date Registered</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data (should be replaced with actual data from the backend) -->
                        <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>20/09/2023</td>
                            <td>New York</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Jane Smith</td>
                            <td>18/09/2023</td>
                            <td>Los Angeles</td>
                        </tr>
                        <!-- ... -->
                    </tbody>
                </table>
            </div>

            <div class="col-lg-6">
                <h3>Manage Vaccine Centers</h3>
                <button class="btn btn-success mb-3">Add New Center</button>
                <ul class="list-group">
                    <!-- Sample Data (should be replaced with actual data from the backend) -->
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        New York Center
                        <span>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Los Angeles Center
                        <span>
                            <button class="btn btn-sm btn-warning">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </span>
                    </li>
                    <!-- ... -->
                </ul>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-12">
                <h3>Manage Vaccine Stock</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Vaccine Name</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data -->
                        <tr>
                            <td>Covax</td>
                            <td>10,000</td>
                            <td>
                                <button class="btn btn-sm btn-primary">Add Stock</button>
                                <button class="btn btn-sm btn-danger">Reduce Stock</button>
                            </td>
                        </tr>
                        <tr>
                            <td>Moderna</td>
                            <td>8,000</td>
                            <td>
                                <button class="btn btn-sm btn-primary">Add Stock</button>
                                <button class="btn btn-sm btn-danger">Reduce Stock</button>
                            </td>
                        </tr>
                        <!-- ... -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
